import os
import nsaway

# Check if program is run as root, else exit.
# Root is needed to perform various action.
# An Init.d Daemon should always be root (sure?)
if not os.geteuid() == 0:
	exit_log(LogLevel.ERRO, "This program needs to run as root.")

nsaway.go()
